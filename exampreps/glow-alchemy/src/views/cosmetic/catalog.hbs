


<h2>Product Catalog</h2>
        <section class="products">
          

            {{#each data}}
            <article class="product">
                <img src="{{image}}">
                <h3>{{name}}</h3>
                <p>Suitable for: {{skin}}</p>
                <a href="/cosmetic/details/{{_id}}">Read More</a>
            </article>
            {{else}}
            
            <p class="no-post">There are no products found yet!</p> 
            {{/each}}
        </section>