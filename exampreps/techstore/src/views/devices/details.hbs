

    <section class="details-hero">
        <div class="container">
            <h2>Laptop Details</h2>
        </div>
    </section>

    <section class="details-content">
        <div class="container">
            <div class="product-details">
                <div class="product-image">
                    <img src="https://s13emagst.akamaized.net/products/53590/53589192/images/res_790dbf4452932f219ec1268b12fc73a3.jpg?width=720&height=720&hash=933FA37D9229954034F5BBF01C2438FA" alt="Laptop">
                </div>
                <div class="product-info">
                    <h3>Brand: {{device.brand}}</h3>
                    <p><strong>Model:</strong> {{device.model}}</p>
                    <p><strong>Hard Disk:</strong> {{device.hardDisk}}</p>
                    <p><strong>Screen Size:</strong> {{device.screenSize}}</p>
                    <p><strong>RAM:</strong> {{device.ram}}</p>
                    <p><strong>Operating System:</strong> {{device.operatingSystem}}</p>
                    <p><strong>CPU:</strong> {{device.cpu}}</p>
                    <p><strong>GPU:</strong> {{device.gpu}}</p>
                    <p><strong>Price:</strong> ${{device.price}}</p>
                    <p><strong>Color:</strong> {{device.color}}</p>
                    <p><strong>Weight:</strong> {{device.weight}} kg</p>
                </div>
            </div>
            <div class="product-actions">
                <button class="btn edit"><a href="/devices/edit/{{device.id}}">Edit</a></button>
                <button class="btn delete"><a href="/devices/delete/{{device.id}}">Delete</a></button>
                <button class="btn prefer"><a href="/devices/preffer/{{device.id}}">Prefer</a></button>
                 <p class="prefer-message">You've already preferred this device</p>
            </div>
        </div>
    </section>

    