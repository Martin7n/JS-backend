

            <section id="search">
                <h1>Search</h1>
                <form action="/movies/search" method="" class="form">
                    <input type="text" class="search" name="search" placeholder="Title...">
                    <input type="text"  class="genre" name="genre" placeholder="Genre...">
                    <input type="number"  class="year" name="year" placeholder="Year...">
                    <input type="submit" value="search">
                </form>
            </section>

            <section id="catalog">
                <div class="band">

             

                    <!-- If there are posts for movie in the database display each of them -->
                    {{#each context}}
                        {{>movieCard}}
                        
                    {{else}}
                                        <!-- If there are still no posts in the database display: -->
                    <div class="no-posts">
                        <p class="no-offer">There are no posts yet...</p>
                    </div> 
                    {{/each}}

                    <!-- If there are no posts matched display: -->
                    <!-- <div class="no-posts">
                        <p class="no-offer">There are no movies matched...</p>
                    </div> -->
                </div>
            </section>